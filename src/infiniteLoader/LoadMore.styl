@require '../css/base'

.{$-cui-class-prefix}-loadmore
    width: 65%
    margin: 1.5em auto
    line-height: 1.6em
    font-size: 14px
    text-align: center
    color: #999

    &-tips
        display: inline-block
        vertical-align: middle

    &-line
        border-top: 1px solid #e5e5e5
        margin-top: 2.4em

        .{$-cui-class-prefix}-tips
            position: relative
            top: -.9em
            padding: 0 .55em
            background-color: #fff
            color: #999

    &-dot
        .{$-cui-class-prefix}-tips
             padding: 0 .16em

             &:before
                content: " "
                width: 4px
                height: 4px
                border-radius: 50%
                background-color: #e5e5e5
                display: inline-block
                position: relative
                vertical-align: 0
                top: -.16em

