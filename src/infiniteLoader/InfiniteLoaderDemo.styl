.infinite-demo
    margin-top: 10px
    font-size: 14px
    line-height: 1.5

    &-item
        display: flex
        align-items: center
        padding: 10px 0;
        position: relative;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

        &:before
            content: " "
            absolute: left top right
            height: 1px
            border-top: 1px solid #d9d9d9
            color: #d9d9d9
            transform-origin: 0 0;
            transform: scaleY(.5);

    &-txt
        flex: 1

    &-link
        text-align: right
        color: #999
        position: relative
